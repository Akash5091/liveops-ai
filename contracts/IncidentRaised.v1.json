{
  "$id": "https://liveops.ai/schemas/IncidentRaised.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "IncidentRaised",
  "type": "object",
  "required": ["event_id","event_type","schema_version","occurred_at","producer","correlation_id","data"],
  "properties": {
    "event_id": { "type": "string", "format": "uuid" },
    "event_type": { "const": "IncidentRaised" },
    "schema_version": { "const": "1.0" },
    "occurred_at": { "type": "string", "format": "date-time" },
    "producer": { "type": "string" },
    "correlation_id": { "type": "string" },
    "data": {
      "type": "object",
      "required": ["incident_key","title","severity","status","started_at","detected_at","primary_service_key","impacted_services","evidence"],
      "properties": {
        "incident_key": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "severity": { "type": "string", "enum": ["low","medium","high","critical"] },
        "status": { "type": "string", "enum": ["open","acknowledged","mitigated","resolved","false_positive"] },
        "started_at": { "type": "string", "format": "date-time" },
        "detected_at": { "type": "string", "format": "date-time" },
        "primary_service_key": { "type": "string" },
        "impacted_services": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["service_key","impact_score"],
            "properties": {
              "service_key": { "type": "string" },
              "impact_score": { "type": "number" }
            }
          }
        },
        "labels": { "type": "array", "items": { "type": "string" } },
        "evidence": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["service_key","metric_key","bucket_start","observed_value"],
            "properties": {
              "service_key": { "type": "string" },
              "metric_key": { "type": "string" },
              "bucket_start": { "type": "string", "format": "date-time" },
              "observed_value": { "type": "number" },
              "baseline_value": { "type": ["number","null"] },
              "threshold_value": { "type": ["number","null"] },
              "z_score": { "type": ["number","null"] },
              "note": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
