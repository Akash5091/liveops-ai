{
  "$id": "https://liveops.ai/schemas/MetricIngested.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MetricIngested",
  "type": "object",
  "required": ["event_id","event_type","schema_version","occurred_at","producer","correlation_id","data"],
  "properties": {
    "event_id": { "type": "string", "format": "uuid" },
    "event_type": { "const": "MetricIngested" },
    "schema_version": { "const": "1.0" },
    "occurred_at": { "type": "string", "format": "date-time" },
    "producer": { "type": "string" },
    "correlation_id": { "type": "string" },
    "data": {
      "type": "object",
      "required": ["service_key","metric_key","bucket_start","value","unit","dimensions"],
      "properties": {
        "service_key": { "type": "string" },
        "metric_key": { "type": "string" },
        "bucket_start": { "type": "string", "format": "date-time" },
        "value": { "type": "number" },
        "unit": { "type": "string" },
        "dimensions": { "type": "object", "additionalProperties": true }
      }
    }
  }
}
